generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model Business {
  id          String   @id @default(cuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Currency {
  id            String      @id @default(cuid())
  code          String      @unique // e.g., USD, EUR
  name          String
  symbol        String
  rate          Decimal     @default(1.0) @db.Decimal(20, 10) // Rate relative to base
  isBase        Boolean     @default(false)
  
  shops         Shop[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  name      String?
  
  shopId    String?
  shop      Shop?    @relation(fields: [shopId], references: [id])
  
  sales     Sale[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Warehouse {
  id            String      @id @default(cuid())
  name          String
  latitude      Float?
  longitude     Float?
  inventory     Inventory[]
  transfersFrom Transfer[]  @relation("TransferFromWarehouse")
  transfersTo   Transfer[]  @relation("TransferToWarehouse")
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Shop {
  id            String      @id @default(cuid())
  businessId    String?
  name          String
  location      String?
  latitude      Float?
  longitude     Float?
  
  currencyId    String?
  currency      Currency?   @relation(fields: [currencyId], references: [id])
  
  users         User[]
  inventory     Inventory[]
  sales         Sale[]
  transfersFrom Transfer[]  @relation("TransferFromShop")
  transfersTo   Transfer[]  @relation("TransferToShop")
  shifts        Shift[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Product {
  id          String         @id @default(cuid())
  name        String
  sku         String         @unique
  barcode     String?        @unique
  description String?
  price       Decimal        @db.Decimal(10, 2)
  cost        Decimal        @default(0) @db.Decimal(10, 2)
  discountPrice Decimal?     @db.Decimal(10, 2)
  
  inventory   Inventory[]
  saleItems   SaleItem[]
  transferItems TransferItem[]
  invoiceItems  InvoiceItem[]
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Inventory {
  id          String     @id @default(cuid())
  productId   String
  product     Product    @relation(fields: [productId], references: [id])
  
  warehouseId String?
  warehouse   Warehouse? @relation(fields: [warehouseId], references: [id])
  
  shopId      String?
  shop        Shop?      @relation(fields: [shopId], references: [id])
  
  quantity    Int        @default(0)

  @@unique([productId, warehouseId])
  @@unique([productId, shopId])
}

model Supplier {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  latitude  Float?
  longitude Float?
  
  invoices  Invoice[]
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Invoice {
  id         String        @id @default(cuid())
  number     String        @unique
  date       DateTime      @default(now())
  
  supplierId String?
  supplier   Supplier?     @relation(fields: [supplierId], references: [id])
  
  items      InvoiceItem[]
  
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model InvoiceItem {
  id        String  @id @default(cuid())
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  cost      Decimal @db.Decimal(10, 2)
}

model Transfer {
  id              String         @id @default(cuid())
  date            DateTime       @default(now())
  
  fromWarehouseId String?
  fromWarehouse   Warehouse?     @relation("TransferFromWarehouse", fields: [fromWarehouseId], references: [id])
  
  fromShopId      String?
  fromShop        Shop?          @relation("TransferFromShop", fields: [fromShopId], references: [id])
  
  toWarehouseId   String?
  toWarehouse     Warehouse?     @relation("TransferToWarehouse", fields: [toWarehouseId], references: [id])
  
  toShopId        String?
  toShop          Shop?          @relation("TransferToShop", fields: [toShopId], references: [id])
  
  items           TransferItem[]
  status          String         @default("COMPLETED") // PENDING, COMPLETED, CANCELLED
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model TransferItem {
  id         String   @id @default(cuid())
  transferId String
  transfer   Transfer @relation(fields: [transferId], references: [id])
  
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  
  quantity   Int
}

model ActivityLog {
  id          String   @id @default(cuid())
  businessId  String
  userId      String?
  action      String   // e.g., "SALE_CREATED", "TRANSFER_COMPLETED", "STOCK_ADJUSTED"
  entityType  String   // e.g., "PRODUCT", "WAREHOUSE", "SHOP"
  entityId    String?
  details     String?  @db.Text
  createdAt   DateTime @default(now())
}

model Customer {
  id          String   @id @default(cuid())
  businessId  String
  name        String
  phone       String?
  email       String?
  sales       Sale[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([businessId])
}

model Shift {
  id            String    @id @default(cuid())
  shopId        String
  userId        String
  openedAt      DateTime  @default(now())
  closedAt      DateTime?
  openingCash   Decimal   @default(0)
  closingCash   Decimal?
  actualCash    Decimal?
  difference    Decimal?
  status        String    @default("OPEN") // OPEN, CLOSED
  shop          Shop      @relation(fields: [shopId], references: [id])
  createdAt     DateTime  @default(now())

  @@index([shopId])
}

model Sale {
  id             String     @id @default(cuid())
  number         String     @unique
  date           DateTime   @default(now())
  
  businessId     String
  
  shopId         String
  shop           Shop       @relation(fields: [shopId], references: [id])
  
  userId         String
  user           User       @relation(fields: [userId], references: [id])
  
  items          SaleItem[]
  total          Decimal    @db.Decimal(10, 2)
  
  customerId     String?
  customer       Customer?  @relation(fields: [customerId], references: [id])
  
  // Currency snapshot at time of sale
  currencyCode   String?
  currencySymbol String?
  currencyRate   Decimal? @db.Decimal(20, 10)
  
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
}
